if (spin) {
	image_angle = image_angle + 15;
	if (image_angle > 360) {
		image_angle = 0;
	}
}

if (preatk) {
	if (image_angle = pxy) {
		alarm[2] = 1*room_speed;
		preatk = false;
	}
	else if (image_angle < pxy) {
		image_angle = image_angle + 15;
	}
	else if (image_angle-pxy <= 20) {
		image_angle = pxy
		direction = pxy
	}
}

if (attack) {
	speed = 7
}